img {
    max-width: 100%;
    margin-left: 20px;
    padding-left: 10px;
    margin-top: 30px;
    padding-top: 40px;
}
    .morph {
    width: 100%;
    transform: translate3d(0, 0, 0);
    will-change: left, top, height, width, transform;
    left: 0;
    top: 0;
    transition: all .3s ease;
    background: gray;
}